{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":timezone(Asia/Seoul)",
    "config:base",
    "schedule:daily",
  ],
  "packageRules": [
    {
      "ignoreUnstable": true,
      "matchPackagePatterns": ["*"],
    },
    {
      "groupName": "Kotlin and KSP",
      "groupSlug": "kotlin",
      "matchPackagePrefixes": ["com.google.devtools.ksp"],
      "matchPackagePatterns": ["org.jetbrains.kotlin.*"],
    },
  ],
}
